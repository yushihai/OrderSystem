<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/server_settleaccount_image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:src="@mipmap/server_orderimage" />

    <TextView
        android:id="@+id/server_settleaccount_idtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/server_settleaccount_image"
        android:textColor="#000000"
        android:textSize="12dp"
        android:text="订单号"/>

    <TextView
        android:id="@+id/server_settleaccount_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:layout_toLeftOf="@+id/server_settleaccount_cancel"
        android:layout_marginRight="5dp"
        android:gravity="right"
        android:textColor="#000000"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/server_settleaccount_nametext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/server_settleaccount_idtext"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/server_settleaccount_image"
        android:textColor="#000000"
        android:textSize="12dp"
        android:text="账号" />

    <TextView
        android:id="@+id/server_settleaccount_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/server_settleaccount_id"
        android:layout_marginTop="5dp"
        android:layout_toLeftOf="@+id/server_settleaccount_cancel"
        android:layout_marginRight="5dp"
        android:gravity="right"
        android:textColor="#000000"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/server_settleaccount_statetext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/server_settleaccount_nametext"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/server_settleaccount_image"
        android:textColor="#000000"
        android:textSize="12dp"
        android:text="状态" />

    <TextView
        android:id="@+id/server_settleaccount_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/server_settleaccount_name"
        android:layout_marginTop="5dp"
        android:layout_toLeftOf="@+id/server_settleaccount_cancel"
        android:layout_marginRight="5dp"
        android:gravity="right"
        android:textColor="#000000"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/server_settleaccount_totaltext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/server_settleaccount_statetext"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/server_settleaccount_image"
        android:textColor="#000000"
        android:textSize="12dp"
        android:text="实付" />

    <TextView
        android:id="@+id/server_settleaccount_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/server_settleaccount_state"
        android:layout_marginTop="5dp"
        android:layout_toLeftOf="@+id/server_settleaccount_cancel"
        android:layout_marginRight="5dp"
        android:gravity="right"
        android:textColor="#000000"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/server_settleaccount_timetext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/server_settleaccount_totaltext"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/server_settleaccount_image"
        android:textColor="#000000"
        android:textSize="12dp"
        android:text="时间" />

    <TextView
        android:id="@+id/server_settleaccount_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/server_settleaccount_total"
        android:layout_marginTop="5dp"
        android:layout_toLeftOf="@+id/server_settleaccount_cancel"
        android:layout_marginRight="5dp"
        android:gravity="right"
        android:textColor="#000000"
        android:textSize="12dp" />

    <Button
        android:id="@+id/server_settleaccount_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:text="取消" />

    <Button
        android:id="@+id/server_settleaccount_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/server_settleaccount_cancel"
        android:layout_marginTop="5dp"
        android:text="结账" />

</RelativeLayout>