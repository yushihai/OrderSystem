<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListView
        android:id="@+id/dish_list"
        android:divider="#00000000"
        android:dividerHeight="20dp"
        android:scrollbars="none"
        android:listSelector="@android:color/transparent"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:background="#575151">

            <ImageView
                android:id="@+id/dish_package"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/dish_package"
                android:layout_marginLeft="20dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="5dp" />

            <TextView
                android:id="@+id/dish_sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/dish_package"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:text="¥" />

            <TextView
                android:id="@+id/dish_totalprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/dish_sign"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:text="63" />

        </RelativeLayout>

        <Button
            android:id="@+id/dish_settleaccount"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="#51BD45"
            android:textColor="#ffffff"
            android:textSize="16dp"
            android:text="去结算" />
    </LinearLayout>

</LinearLayout>