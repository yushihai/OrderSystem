<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/modifyserverpwd_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:text="修改服务员密码" />

    <View
        android:id="@+id/modifyserverpwd_line"
        android:layout_width="250dp"
        android:layout_height="2dp"
        android:layout_below="@+id/modifyserverpwd_title"
        android:background="#32DFCB"
        android:layout_marginTop="10dp"/>

    <TableRow
        android:id="@+id/modifyserverpwd_accountrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/modifyserverpwd_line"
        android:layout_alignRight="@+id/modifyserverpwd_line"
        android:layout_marginTop="10dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp" >

        <TextView
            android:id="@+id/modifyserverpwd_accounttext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账号："
            android:textColor="#000000"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/modifyserverpwd_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:textSize="18sp" />
    </TableRow>

    <TableRow
        android:id="@+id/modifyserverpwd_pwdrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/modifyserverpwd_accountrow"
        android:layout_alignRight="@+id/modifyserverpwd_line"
        android:layout_marginTop="15dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp" >

        <TextView
            android:id="@+id/modifyserverpwd_pwdtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密码："
            android:textColor="#000000"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/modifyserverpwd_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:inputType="textPassword" />
    </TableRow>

    <Button
        android:id="@+id/modifyserverpwd_cancel"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/modifyserverpwd_pwdrow"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="5dp"
        android:background="#00000000"
        android:text="取消" />

    <Button
        android:id="@+id/modifyserverpwd_submit"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/modifyserverpwd_pwdrow"
        android:layout_toRightOf="@+id/modifyserverpwd_cancel"
        android:layout_marginTop="5dp"
        android:background="#00000000"
        android:text="确定" />

</RelativeLayout>