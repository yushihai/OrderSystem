<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/lookserverpwdresult_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:text="查询结果" />

    <View
        android:id="@+id/lookserverpwdresult_line"
        android:layout_width="250dp"
        android:layout_height="2dp"
        android:layout_below="@+id/lookserverpwdresult_title"
        android:background="#32DFCB"
        android:layout_marginTop="10dp"/>


    <TextView
        android:id="@+id/lookserverpwdresult_accounttext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lookserverpwdresult_line"
        android:layout_marginTop="10dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:text="账号："
        android:textColor="#000000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/lookserverpwdresult_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/lookserverpwdresult_accounttext"
        android:layout_alignTop="@+id/lookserverpwdresult_accounttext"
        android:textSize="18sp"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/lookserverpwdresult_pwdtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lookserverpwdresult_accounttext"
        android:layout_marginTop="5dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:text="密码："
        android:textColor="#000000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/lookserverpwdresult_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/lookserverpwdresult_pwdtext"
        android:layout_alignTop="@+id/lookserverpwdresult_pwdtext"
        android:textColor="#000000"
        android:textSize="18sp" />

    <Button
        android:id="@+id/lookserverpwdresult_submit"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lookserverpwdresult_pwdtext"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="5dp"
        android:background="#00000000"
        android:text="确定" />

</RelativeLayout>