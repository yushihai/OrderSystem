<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/consumerecord_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="10dp"
        android:src="@mipmap/lookorder_image" />

    <TextView
        android:id="@+id/consumerecord_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/consumerecord_image"
        android:textColor="#000000"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/consumerecord_sign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/consumerecord_time"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/consumerecord_image"
        android:textColor="#000000"
        android:text="Â¥"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/consumerecord_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/consumerecord_time"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/consumerecord_sign"
        android:textColor="#000000"
        android:textSize="12dp" />

</RelativeLayout>