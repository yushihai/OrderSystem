<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/updatedish_item_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <TextView
        android:id="@+id/updatedish_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:textColor="#000000"
        android:textSize="20sp" />

    <TableRow
        android:id="@+id/updatedish_row2"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/updatedish_name"
        android:layout_marginTop="20dp" >

        <TextView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="价格" />

        <EditText
            android:id="@+id/updatedish_price"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:inputType="number"
            android:textSize="18sp"
            android:textColor="#000000" />
    </TableRow>

    <TextView
        android:id="@+id/updatedish_imagetext"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/updatedish_row2"
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        android:text="图片" />

    <ImageView
        android:id="@+id/updatedish_image"
        android:layout_width="180dp"
        android:layout_height="120dp"
        android:layout_below="@+id/updatedish_row2"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:scaleType="fitXY"
        android:layout_toRightOf="@+id/updatedish_imagetext" />

    <Button
        android:id="@+id/updatedish_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/updatedish_image"
        android:layout_alignLeft="@+id/updatedish_image"
        android:text="拍照" />

    <Button
        android:id="@+id/updatedish_album"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/updatedish_image"
        android:layout_toRightOf="@+id/updatedish_photo"
        android:text="相册" />

    <TextView
        android:id="@+id/updatedish_introducetext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/updatedish_photo"
        android:layout_marginTop="20dp"
        android:text="简介"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/updatedish_introduce"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:maxHeight="160dp"
        android:layout_below="@+id/updatedish_album"
        android:layout_toRightOf="@+id/updatedish_introducetext"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:textSize="18sp"
        android:textColor="#000000" />

    <Button
        android:id="@+id/updatedish_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/updatedish_introducetext"
        android:layout_marginTop="160dp"
        android:layout_alignParentLeft="true"
        android:text="修改" />

    <Button
        android:id="@+id/updatedish_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/updatedish_introducetext"
        android:layout_marginTop="160dp"
        android:layout_toRightOf="@id/updatedish_submit"
        android:text="返回" />
</RelativeLayout>