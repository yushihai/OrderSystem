<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/dish_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitXY" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginLeft="20dp"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/dish_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true" />

        <TextView
            android:id="@+id/dish_introduce"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dish_name"
            android:layout_marginTop="5dp"
            android:layout_alignParentLeft="true"
            android:textSize="12dp"
            android:lines="1"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/dish_sale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dish_introduce"
            android:layout_marginTop="5dp"
            android:layout_alignParentLeft="true"
            android:textSize="12dp"
            android:text="销量128" />

        <TextView
            android:id="@+id/dish_pricesign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="1dp"
            android:textColor="#FF6600"
            android:textSize="12dp"
            android:text="¥" />

        <TextView
            android:id="@+id/dish_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/dish_pricesign"
            android:textSize="16sp"
            android:textColor="#FF6600" />

        <ImageView
            android:id="@+id/dish_add"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:src="@drawable/dish_add"
            android:layout_marginLeft="7dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true" />

        <TextView
            android:id="@+id/dish_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="2dp"
            android:layout_toLeftOf="@+id/dish_add"
            android:textSize="15dp"
            android:textColor="#000000"
            android:text="5" />

        <ImageView
            android:id="@+id/dish_sub"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/dish_sub"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/dish_num"
            android:layout_marginBottom="1dp"
            android:layout_marginRight="7dp" />

    </RelativeLayout>

</LinearLayout>